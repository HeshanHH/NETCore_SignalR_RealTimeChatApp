@model Chat

@*for messages*@
<div class="chat-body">
    @foreach (var message in Model.Messages)
    {
        <div class="message">
            <header>@message.Name</header>
            <p>@message.Text</p>
            <footer>@message.Timestamp</footer>
        </div>
    }
    
</div>
@*for message input*@
<div class="chat-input">
    <input type="text"/>
    <button>Send</button>
</div>